<?xml version="1.0"?>
<schema version="0.3">

	<table name="btasmillerGallery">
		<field name="bID" type="I">
			<key />
			<unsigned />
		</field>
		<field name="fsID" type="I"><unsigned /></field>
		<field name="smallThumbs" type="I1">
			<unsigned />
			<notnull />
			<default value="0" />
		</field>
		<field name="maxHeight" type="I"><unsigned /><default value="600" /></field>
		<field name="maxWidth" type="I"><unsigned /><default value="800" /></field>
	</table>
	
	<table name="btasmillerGalleryImg">
		<field name="GalleryImgId" type="I">
			<key />
			<autoincrement />
			<unsigned />
		</field>
		<field name="bID" type="I"><unsigned /></field>
		<field name="fID" type="I"><unsigned /></field>		
		<field name="description" type="C" size="255"></field>
		<field name="position" type="I"><unsigned /></field>	
		<field name="imgHeight" type="I"><unsigned /></field>	
		<field name="imgWidth" type="I"><unsigned /></field>
	</table>
	
</schema>
